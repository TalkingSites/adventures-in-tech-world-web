<div class="footer-wrapper">
  <div class="divider" aria-hidden="true"></div>

  <footer class="border-top pb-4 mt-auto bg-footer-gradient" id="footer-main" style="padding-top: 10rem;">
    <div class="container d-flex flex-wrap justify-content-between align-items-center gap-4 text-light fs-5 fw-semibold">
      <div>
        <div>
          &copy; {{ global.currentYear }}
          <a href="/" class="text-decoration-none text-light">{{ site.title }}</a>
        </div>
        <div class="mt-1">
          <a class="small fs-6 text-light text-decoration-none opacity-75" href="{{ site.siteRepo }}" target="_blank" rel="noopener">
            <i class="bi bi-github me-2"></i>Website on GitHub
          </a>
        </div>
      </div>
      <div class="d-flex gap-3 flex-wrap">
        {% for item in navbar %}
          {% if item.footer %}
            <a href="{{ item.href }}" class="text-decoration-none text-light nav-link">
              {{ item.title }}
            </a>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </footer>
</div>